<form action="/Login/Login" method="POST">
    <div style="text-align:center">
        <div class="my_tbl">
            <div class="my_row">
                <div class="my_cell">
                    Username:
                </div>
                <div class="my_cell">
                    <input name="username" />
                </div>
            </div>
            <div class="my_row">
                <div class="my_cell">
                    Password:
                </div>
                <div class="my_cell">
                    <input name="password" type="password" />
                </div>
            </div>
            <div class="my_row">
                <div class="my_cell"></div>
                <div class="my_cell" style="text-align: right">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>