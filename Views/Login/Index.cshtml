@{
    ViewData["Title"] = "Login";
    List<Products> allProducts = (List<Products>)ViewData["allProducts"];
    Layout = "~/Views/Shared/_Layout.cshtml";
    string searchStr = (string)ViewData["searchStr"];
}





<form action="/Login/Login" method="POST">
    <div style="text-align:center">
        <h3>Login to purchase items or view orders</h3>
        <br />
        <div class="my_tbl">
            <div class="my_row">
                <div class="my_cell">
                    Username:
                </div>
                <div class="my_cell">
                    <input name="username" />
                </div>
            </div>
            <div class="my_row">
                <div class="my_cell">
                    Password:
                </div>
                <div class="my_cell">
                    <input name="password" type="password" />
                </div>
            </div>
            <br>
            <div class="my_row">
                <div class="my_cell"></div>
                <div class="my_cell" style="text-align: center">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

